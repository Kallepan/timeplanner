{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "wire gen api-gateway",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "cd api-gateway && wire gen api-gateway/app"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "wire gen planner-backend",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "cd planner-backend && wire gen planner-backend/app"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "test api-gateway",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "cd api-gateway && go test ./..."],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "test planner-backend",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "cd planner-backend && go test ./..."],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "path": "frontend",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "path": "frontend",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    }
  ]
}
